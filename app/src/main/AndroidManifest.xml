<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.studymongolian.chimee">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FavoriteActivity"
            android:label="@string/app_name"
            android:parentActivityName="net.studymongolian.chimee.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.studymongolian.chimee.MainActivity" />
        </activity>
        <activity
            android:name=".HistoryActivity"
            android:label="@string/app_name"
            android:parentActivityName="net.studymongolian.chimee.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.studymongolian.chimee.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/app_name"
            android:parentActivityName="net.studymongolian.chimee.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.studymongolian.chimee.MainActivity" />
        </activity>
        <activity
            android:name=".ColorChooserActivity"
            android:label="@string/app_name"
            android:parentActivityName="net.studymongolian.chimee.SettingsActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.studymongolian.chimee.SettingsActivity" />
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/app_name"
            android:parentActivityName="net.studymongolian.chimee.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.studymongolian.chimee.MainActivity" />
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/app_name"
            android:parentActivityName="net.studymongolian.chimee.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.studymongolian.chimee.MainActivity" />
        </activity>
        <activity
            android:name=".PhotoOverlayActivity"
            android:label="@string/title_activity_photo_overlay"
            android:parentActivityName="net.studymongolian.chimee.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.studymongolian.chimee.MainActivity" />
        </activity>
        <activity
            android:name=".OpenActivity"
            android:label="@string/app_name"
            android:parentActivityName="net.studymongolian.chimee.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.studymongolian.chimee.MainActivity" />
        </activity>
        <activity
            android:name=".SaveActivity"
            android:label="@string/app_name"
            android:parentActivityName="net.studymongolian.chimee.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.studymongolian.chimee.MainActivity" />
        </activity>
        <activity
            android:name=".FontChooserDialog"
            android:theme="@android:style/Theme.Dialog"/>
        <activity
            android:name=".SettingsKeyboardChooserDialog"
            android:theme="@android:style/Theme.Dialog"/>


        <provider
            android:name=".ChimeeUserDictionaryProvider"
            android:authorities="net.studymongolian.chimee.user_dictionary"
            android:exported="false"/>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="net.studymongolian.chimee.fileprovider"
            android:grantUriPermissions="true"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

    </application>

</manifest>