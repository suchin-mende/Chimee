<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<item android:drawable="@drawable/keys_pressed" android:state_pressed="true"/>-->
    <!--<item android:drawable="@drawable/keys_focused" android:state_activated="true"/>-->
    <!--<item android:drawable="@drawable/keys_normal"/>-->

    <item android:state_pressed="true">
        <inset android:inset="2dp">
            <shape>
                <solid android:color="@color/keyboard_keys_pressed"/>
                <corners android:radius="5dp"/>
            </shape>
        </inset>

    </item>

    <item>
        <inset android:inset="2dp">
            <shape>
                <solid android:color="@color/keyboard_keys_normal"/>
                <corners android:radius="5dp"/>
            </shape>
        </inset>

    </item>

</selector>