<resources xmlns:android="http://schemas.android.com/apk/res/android">



    <style name="AppTheme.MenuTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.KeyLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/keys</item>
    </style>
    
    <style name="AppTheme.FormatKeyLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/keys_format</item>
    </style>
    
    <style name="AppTheme.MongolKeyTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/keyboard_letters</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="AppTheme.MongolLongPressKeyTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/keyboard_longtouch_letters</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="AppTheme.MongolKeyImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>