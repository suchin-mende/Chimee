<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlFavoriteMessageListItem"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/custom_ripple"
    android:paddingBottom="16dp">

    <net.studymongolian.mongollibrary.MongolTextView
        android:id="@+id/mtv_history_date_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        app:textColor="@color/light_grey"
        app:textSize="14sp" />

    <net.studymongolian.mongollibrary.MongolTextView
        android:id="@+id/mtv_history_message_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mtv_history_date_item"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:textColor="@color/black"
        app:textSize="24sp" />

</RelativeLayout>